<%= render 'navbar', show_links: false %>

<div class="container articles-container">
	<div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12 centralized">
      <div class="mainheading">
        <h1 class="posttitle">Todas os eventos</h1>
      </div>

      <ul id="events-list">
        <% @events.each do |event| %>
          <li>
            <i class="fa fa-calendar"></i> <span class="event-title"><%= event.title %></span>
            <br />

            <% if event.subtitle %>
              <div class="event-subtitle"><%= event.subtitle %></div>
            <% end %>

            <% if event.description %>
              <div class="event-description">
                <%= event.description %>
              </div>
            <% end%>

            <% if event.url %>
              <%= link_to '', event.url, class: 'event-url', target: '_blank' %>
            <% end %>

            <span class="published-in">Dia <%= event.date.strftime('%d/%m/%Y') %></span>
          </li>
        <% end %>
      </ul>

      <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>

<div class="hideshare"></div>

<%= render 'footer' %>
